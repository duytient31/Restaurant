<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tvIngName"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="0.46"
            android:text="IngName"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/tvIngUnit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="0.25"
            android:text="Unit" />

        <TextView
            android:id="@+id/tvIngCurrentAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.03"
            android:textAppearance="?android:attr/textAppearanceMedium" 
            
            android:text="Current Amount" />

        <TextView
            android:id="@+id/tvIngRecAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1.11"
            android:text="Rec Amount" />

        <TextView
            android:id="@+id/tvIngWarningAmount"
            android:layout_width="76dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="Warning Amount"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/ivStockAlert"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:src="@drawable/green_circle" />

        <Button
            android:id="@+id/bEditAmounts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit" />

    </LinearLayout>

</LinearLayout>
